{% extends 'base.html.twig' %}

{% block title %}Libération{% endblock %}

{% block body %}

    <section class="capture-effect">
        <div class="container-fluid container-view">

            <!-- Informations sur la rareté -->
            <header class="row">
                <div class="col-12 col-lg-10 mx-auto rarity-scale">
                    <p>
                        À ce jour, <span>{{ totalPokemon }}</span> Pokémons ont été libérés dans le monde !<br>
                    </p>
                </div>
            </header>

            <!-- Affichage du Pokémon capturé -->
            <article class="row">
                <div class="col-12 col-lg-10 mx-auto view-pokemon forest2-background">


                    <button class="volume">
                        <img class="active sound soundOn" src="{{ asset('medias/images/elements/volume.up.png') }}" alt="Activer le son">
                        <img class="type-none sound soundOff" src="{{ asset('medias/images/elements/volume.off.png') }}" alt="Désactiver le son">
                    </button>

                    <img class="logo-oh" src="{{ asset('medias/images/elements/oh.png') }}" alt="Oh!">
                    <img class="logo-what" src="{{ asset('medias/images/elements/what.png') }}" alt="Qu'est-ce que c'est ?">

                </div>
            </article>

        </div>
    </section>






    {#        Nombre de pièces #}

        <!--Bouton de capture-->
        <div class="mx-auto capture-ball text-center">

            <div id="carouselExample" class="carousel carousel-ball slide">

                <div class="carousel-inner carou-ball">


                    <div class="carousel-item justify-content-center active">
                        <button class="capture-poke-button" data-ball="1">
                            <img src="{{ asset('medias/images/balls/poke-ball.png') }}" id="pokeball-animate" class="pokeball-animate too-big" alt="..." >
                        </button>
                        <br>
                        <img class="multiple" src="{{ asset('medias/images/elements/multiple.png') }}" alt="nombre de lancer">
                        <div class="launch-items launch-1">
                            {{ app.user.launchs}}
                        </div>

                    </div>


                    <div class="carousel-item justify-content-center">
                        <button class="capture-poke-button" data-ball="2">
                            <img src="{{ asset('medias/images/balls/hyper_ball.png') }}" class="pokeball-animate" alt="..." >
                        </button>
                        <br>
                        <img class="multiple" src="{{ asset('medias/images/elements/multiple.png') }}" alt="nombre de lancer">
                        <div class="launch-items launch-2">
                            {{ app.user.hyperBall}}
                        </div>

                    </div>


                    <div class="carousel-item justify-content-center">
                        <button class="capture-poke-button" data-ball="3">
                            <img src="{{ asset('medias/images/balls/shiny_ball.png') }}" class="pokeball-animate" alt="..." >
                        </button>
                        <br>
                        <img class="multiple" src="{{ asset('medias/images/elements/multiple.png') }}" alt="nombre de lancer">
                        <div class="launch-items launch-3">
                            {{ app.user.shinyBall}}
                        </div>

                    </div>


                    <div class="carousel-item justify-content-center">
                        <button class="capture-poke-button" data-ball="4">
                            <img src="{{ asset('medias/images/balls/master_ball.png') }}" class="pokeball-animate" alt="..." >
                        </button>
                        <br>
                        <img class="multiple" src="{{ asset('medias/images/elements/multiple.png') }}" alt="nombre de lancer">
                        <div class="launch-items launch-4">
                            {{ app.user.masterBall}}
                        </div>

                    </div>

                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

    <div class="description-poke-capture my-auto mx-auto col-12 col-lg-4">
        <p class="pokemon-captured-infos visi-zero"></p>

    </div>

{#    Partie slider#}

    <div class="col-12 col-lg-10 mx-auto slider">


                    {% if fiveLast is not empty %}

                        <div class="lastpokemon">
                            <div class="fivelast">

                                {% for pokemonCaptured in fiveLast%}

                                    <div class="pokemon-five">
                                        <div class="mini-infos">
                                            <span>{{ pokemonCaptured.pokemon.name|capitalize }}</span> ~
                                            <a href="{{ path('app_user_showprofile', {pseudonym:pokemonCaptured.owner.pseudonym})}}">{{ pokemonCaptured.owner.pseudonym | capitalize }}</a>
                                        </div>

                                        <div class="mini-images">
                                            <div>
                                                <img class="mini-gif"
                                                     src="{{ asset('medias/images/gifs/' ~ (pokemonCaptured.shiny is same as true ? 'shiny-' : '') ~ pokemonCaptured.pokemon.nameEN ~ '.gif') }}"
                                                     alt="">
                                                {% if pokemonCaptured.shiny is same as true %}
                                                    <img class="mini-shiny" src="{{ asset('medias/images/sparkle/etoiles-shiny.png') }}" alt="">
                                                {% endif %}
                                            </div>
                                            <img class="mini-trainer" src="{{ asset('medias/images/trainers/') ~ pokemonCaptured.owner.avatar ~ ".gif" }}" alt="">
                                        </div>

                                        <span class="time-five">Le {{ pokemonCaptured.captureDate |date("d-m-Y H:i:s")  }}</span>
                                    </div>

                                {% endfor %}

                            </div>

                            <div class="fivelast">

                                {% for pokemonCaptured in fiveLast%}

                                    <div class="pokemon-five">
                                        <div class="mini-infos">
                                            <span>{{ pokemonCaptured.pokemon.name|capitalize }}</span> ~
                                            <a href="{{ path('app_user_showprofile', {pseudonym:pokemonCaptured.owner.pseudonym})}}">{{ pokemonCaptured.owner.pseudonym | capitalize }}</a>
                                        </div>

                                        <div class="mini-images">
                                            <div>
                                                <img class="mini-gif"
                                                     src="{{ asset('medias/images/gifs/' ~ (pokemonCaptured.shiny is same as true ? 'shiny-' : '') ~ pokemonCaptured.pokemon.nameEN ~ '.gif') }}"
                                                     alt="">
                                                {% if pokemonCaptured.shiny is same as true %}
                                                    <img class="mini-shiny" src="{{ asset('medias/images/sparkle/etoiles-shiny.png') }}" alt="">
                                                {% endif %}
                                            </div>
                                            <img class="mini-trainer" src="{{ asset('medias/images/trainers/') ~ pokemonCaptured.owner.avatar ~ ".gif" }}" alt="">
                                        </div>

                                        <span class="time-five">Le {{ pokemonCaptured.captureDate |date("d-m-Y H:i:s")  }}</span>
                                    </div>

                                {% endfor %}

                            </div>



                        </div>
                    {% endif %}

                </div>


{#    Shop #}

    <div class="shop">

        <h2 class="text-center shop-title text-white">Boutique</h2>

        <div class="coin-container text-end">
            <img class="coin-width-2" src="{{ asset('medias/images/elements/real-coin.png') }}" alt="">

            <p class="text-center coin-count"> {{ app.user.money }}</p>

        </div>

        <div class="mini-shop">

            <table class="text-center shop-table">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Descr</th>
                        <th scope="col"></th>
                        <th scope="col">Qte</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody class="shop-list">

                {% for item in items %}

                    <tr>
                        <td class="item-name">{{ item.name }}</td>
                        <td class="price price-{{ loop.index }}">{{ item.price }}<img class="coin-width" src="{{ asset('medias/images/elements/real-coin.png') }}" alt=""></td>
                        <td>{{ item.description }}</td>
                        <td><button class="minus minus-{{ loop.index }}">-</button></td>
                        <td class="quantity quantity-{{ loop.index }}">0</td>
                        <td><button class="plus plus-{{ loop.index }}">+</button></td>
                    </tr>

                {% endfor %}

                </tbody>
                <tfoot class="text-start">
                    <tr>
                        <td colspan="4">Total :</td>
                        <td class="text-center total_shop">0</td>
                    </tr>
                </tfoot>
            </table>
            <br>
            <div class="text-center">
                <button class="text-center buy-it">Acheter</button>
            </div>
        </div>

    </div>

{% endblock %}



{% block js %}

    <script>
        const capturedPageApi = '{{ url('app_capture_api') }}';
        const capturedShopApi = '{{ url('app_shop_api') }}';
        const pokemonsGifDir = '{{ asset('medias/images/gifs') }}';
        const pokemonsShineDir = '{{ asset('medias/images/sparkle') }}';
        const pokemonUppercase = '{{ ''|capitalize }}';
        const launchCounter = '{{ app.user.launchs}}';
        const newLogo = '{{ asset('medias/images/sparkle/new3.png') }}';
        const coin = '{{ asset('medias/images/elements/real-coin.png') }}';
        window.pokemonBackground = 'forest2-background';
        const newRare = '{{ asset('medias/cries/sounds/06-caught-a-pokemon.mp3') }}'
        const crySound = '{{ asset('medias/cries/') }}'
    </script>
    <script src="{{ asset('js/capture.js') }}"></script>

{% endblock %}